<%= render "shared/header" %>

<div class="search_content">
  <%= form_with(url: search_illusts_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "input-box" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>
</div>



<div class="illust_index">
  
  <div class="illust_list">イラスト一覧
    <p>
      話数・タイトルをクリックで詳細の閲覧ができます。
    </p>
  </div>

  <div class="card_wrapper">
    <%= render partial: "illust", collection: @illusts %>
  </div>
 
</div>

<%= render "shared/footer" %>

